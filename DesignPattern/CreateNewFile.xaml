<Window x:Class="DesignPattern.CreateNewFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreateNewFile" Height="150" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="新建文件 请输入文件名" HorizontalAlignment="Center"/>
        <TextBox Name="fileNameTextBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Button Grid.Row="2" Grid.Column="0" Content="确定" Name="Confirm" Click="Confirm_Click" Margin="20,10,20,10"/>
        <Button Grid.Row="2" Grid.Column="1" Content="取消" Name="Cancel" Click="Cancel_Click"  Margin="20,10,20,10"/>
    </Grid>
</Window>
